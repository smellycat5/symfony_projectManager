{% extends 'base.html.twig' %}

{% block title %}Home - Welcome!{% endblock %}


{% block body %}
    <header>
        <h1>Welcome to My Website</h1>
        <nav>

        </nav>
    </header>

    <main>
        <h2>Welcome!</h2>
        <p>This is the home page of my website using Twig inheritance.</p>

        <h3>Current Time</h3>
        <p>The current time is: {{ "now"|date("H:i:s") }}</p>

        <h3>Sample List</h3>
        <ul>
            {% for item in items %}
                <li>{{ item }}</li>
            {% endfor %}
        </ul>
    </main>

    <footer>
        <p>&copy; {{ "now"|date("Y") }} My Website. All rights reserved.</p>
    </footer>
{% endblock %}
